  /* Propiedad Outline */

       
.box-4{
  width:var(--width);
  height: var(--height);
  background: var(--background);
  border: 5px solid black;
  outline: 10px solid red ;
}

/* Propiedad box-shadow 
 * es una copia.
 * box-shadow: h-offset v-offset blur spred color | inset;
 * h-offset: que tanto se va mover en horizontal.
 * v-offset: que tanto se va mover en vertical.
 * blur: el difuminado.
 * spred: que tanto va creecer.
 * color: obviamente color.
 *  | barra es opcional
 * */


  .circle{
    width: 200px;
    height: 200px;
    background: red;
    margin: 100px auto;
    border-radius: 50%;
    box-shadow: -15px -15px 10px 0 rgba(0, 0, 0, .3) inset,
    5px 5px 5px 0px rgba(255, 255, 255, 0.3);


    /* box-shadow: 400px 0px 20px -20px red, 800px 0 blue, 200px 200px, 600px 200px, 0 400px, 400px 400px, 800px 400px; */

    
  
  }






  
